{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "semver": {
            "type": "string",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "group": {
                "type": "string",
                "pattern": "^[a-z0-9.]+$"
            },
            "artifact": {
                "type": "string",
                "pattern": "^[a-z0-9\\\\-]+$"
            },
            "versions": {
                "type": "object",
                "properties": {
                    "latest": {
                        "$ref": "#/definitions/semver"
                    },
                    "released": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "$ref": "#/definitions/semver"
                        },
                        "additionalItems": false
                    }
                },
                "required": [
                    "latest",
                    "released"
                ],
                "additionalProperties": false
            },
            "source": {
                "type": "string",
                "format": "uri"
            }
        },
        "required": [
            "group",
            "artifact",
            "versions",
            "source"
        ],
        "additionalProperties": false
    },
    "additionalItems": false
}